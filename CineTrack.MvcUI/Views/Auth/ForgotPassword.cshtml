@model CineTrack.Shared.DTOs.ForgotPasswordDto
@{ ViewData["Title"] = "Şifremi Unuttum"; }

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Şifremi Unuttum</h3>
                
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                    <div class="text-center">
                        <a asp-action="Login" class="btn btn-link">Giriş sayfasına dön</a>
                    </div>
                }
                else
                {
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">E-Posta Adresiniz</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Bağlantı Gönder</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>