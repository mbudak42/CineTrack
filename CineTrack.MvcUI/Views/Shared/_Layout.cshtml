<!DOCTYPE html>
<html lang="tr">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CineTrack</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
	<style>
		.profile-avatar {
			width: 35px;
			height: 35px;
			border-radius: 50%;
			object-fit: cover;
			border: 2px solid #fff;
		}

		.dropdown-toggle::after {
			margin-left: 0.5em;
		}

		.profile-dropdown .dropdown-menu {
			min-width: 200px;
		}

		.profile-info {
			display: flex;
			align-items: center;
			gap: 10px;
		}
	</style>
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
		<div class="container">
			<a class="navbar-brand" asp-controller="Home" asp-action="Index">🎬 CineTrack</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Search" asp-action="Index">
							<i class="bi bi-search"></i> Ara ve Keşfet
						</a>
					</li>
				</ul>
				<ul class="navbar-nav ms-auto">
					@if (Context.Session.GetString("token") == null)
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
						</li>
					}
					else
					{
						var username = Context.Session.GetString("username") ?? "Kullanıcı";
						var avatarUrl = Context.Session.GetString("avatarUrl") ?? "none.png";
						var fullAvatarPath = avatarUrl.StartsWith("http") ? avatarUrl : $"/images/{avatarUrl}";

						<li class="nav-item dropdown profile-dropdown">
							<a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
								data-bs-toggle="dropdown" aria-expanded="false">
								<img src="@fullAvatarPath" alt="@username" class="profile-avatar me-2"
									onerror="this.src='/images/none.jpg'">
								<span>@username</span>
							</a>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<a class="dropdown-item" asp-controller="Profile" asp-action="Index">
										<i class="bi bi-person"></i> Profilim
									</a>
								</li>
								<li>
									<a class="dropdown-item" asp-controller="Profile" asp-action="Settings">
										<i class="bi bi-gear"></i> Ayarlar
									</a>
								</li>
								<li>
									<hr class="dropdown-divider">
								</li>
								<li>
									<a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
										<i class="bi bi-box-arrow-right"></i> Çıkış Yap
									</a>
								</li>
							</ul>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer mt-auto py-3 bg-light">
		<div class="container text-center">
			<span class="text-muted">CineTrack © 2025</span>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>