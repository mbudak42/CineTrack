@model List<CineTrack.Shared.DTOs.ContentDto>

@if (Model != null && Model.Any())
{
	<div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
		@foreach (var item in Model)
		{
			<div class="col">
				<div class="card h-100 shadow-sm border-0">
					<img src="@(item.CoverUrl ?? "/images/placeholder.jpg")" class="card-img-top"
						style="aspect-ratio: 2/3; object-fit: cover;">
					<div class="card-body p-2">
						<h6 class="card-title text-truncate" title="@item.Title">@item.Title</h6>
						<a href="/Content/Detail?type=@item.ContentType&id=@item.Id" class="stretched-link"></a>
					</div>
				</div>
			</div>
		}
	</div>
}
else
{
	<div class="text-center py-5 text-muted">
		<i class="bi bi-inbox fs-1 d-block mb-2"></i>
		Bu listede henüz içerik yok.
	</div>
}