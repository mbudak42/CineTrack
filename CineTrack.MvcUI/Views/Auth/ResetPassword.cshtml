@model CineTrack.Shared.DTOs.ResetPasswordDto
@{
	ViewData["Title"] = "Yeni Şifre Belirle";
}

<div class="row justify-content-center mt-5">
	<div class="col-md-5">
		<div class="card shadow">
			<div class="card-body">
				<h3 class="card-title text-center mb-4">Yeni Şifre Belirle</h3>

				@if (ViewBag.Success == true)
				{
					<div class="alert alert-success">Şifreniz başarıyla güncellendi.</div>
					<a asp-action="Login" class="btn btn-success w-100">Giriş Yap</a>
				}
				else
				{
					<form method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<input type="hidden" asp-for="Token" />
						<input type="hidden" asp-for="Email" />

						<div class="mb-3">
							<label class="form-label">Yeni Şifre</label>
							<input asp-for="NewPassword" type="password" class="form-control" required minlength="6" />
						</div>

						<button type="submit" class="btn btn-primary w-100">Şifreyi Güncelle</button>
					</form>
				}
			</div>
		</div>
	</div>
</div>